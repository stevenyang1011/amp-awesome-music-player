<md-toolbar class="md-theme-light">
	<h2 class="md-toolbar-tools">User</h2>
</md-toolbar>
<md-content layout-padding ng-controller="UserController">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<% for(var i in messages) { %>
				<div class="flash"><%= messages[i] %></div>
				<% } %>
				<% if ( user ) { %>
				<pre><%= user %></pre>
				<button ng-click="handleUpdateButtonClick()">Save Playlist</button>
				<a href="/signout">Sign out</a>
				<% } else { %>
				<% include ./signin %>
				<% include ./signup %>
				<% } %>
			</div>
		</div>
	</div>
</md-content>

<script type="text/javascript">
	window.user = <%- user || 'null' %>;
</script>